{
    "appName": "Indian Ocean Digital Collection",
    "environment" : "local",
    "development" : {
        "appUrl": "http://devweb1.dlib.nyu.edu/indianocean",
        "appRoot": "/indianocean",
        "discoUrl": "http://dev-discovery.dlib.nyu.edu:8080/solr3_discovery/core0/select/",
     
        "sass" : {
            "build" : "internal"
          , "options" : {
                "style" : "compressed"
              , "debugInfo" : false
              , "lineNumbers" : false
            }
        }
    },
    "local" : {
        "appUrl" : "http://localhost/indianocean",
        "appRoot" : "/indianocean",
        "discoUrl": "http://dev-discovery.dlib.nyu.edu:8080/solr3_discovery/core0/select/",
        "sass" : {
            "build" : "external"
          , "options" : {
                "style" : "expanded"
              , "debugInfo" : false
              , "lineNumbers" : false
            }
        }    
    },
    "production" : {
        "appUrl": "http://dlib.nyu.edu/indianocean",
        "appRoot": "/indianocean",
        "discoUrl": "http://discovery.dlib.nyu.edu:8080/solr3_discovery/core0/select/",
        "sass" : {
            "build" : "inline"
          , "options" : {
                "style" : "compressed"
            }
        }     
    }        
}
