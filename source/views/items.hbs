<!-- file: items.hbs -->
<div class="item-list flex-container">
  {{#items}}
  <article class="item" {{#if score}}data-score="{{{score}}}"{{/if}}>
  <div class="card">
    <div class="thumbs" >
      <div class="clipper">
        <a href="{{../app.appRoot}}/book/{{ss_book_identifier}}/1" aria-hidden="true" role="presentation" tabindex="-1">
          <img src="{{../app.viewer}}/api/image/books/{{ss_book_identifier}}/1/full/150,/0/default.jpg" alt="" title="{{title}}" role="presentation">
        </a>
      </div>
    </div>
    <h1 class="md_title"><a href="{{../app.appRoot}}/book/{{ss_book_identifier}}/1">{{{ss_title}}}</a></h1>
    <div class="md_authors"><span class="md_label">Author:</span> {{#each sm_author}}<span class="md_author">{{this}}</span>{{/each}}</div>
    <div class="md_publisher"><span class="md_label">Publisher:</span> {{#each sm_field_publication_location}}<span>{{this}}</span>{{/each}}, {{#each sm_publisher}}<span>{{this}}</span>{{/each}},  {{ss_pubdate}}</div>
      <div class="md_provider"><span class="md_label">Provider:</span> {{#each sm_collection_partner_label}}<span>{{this}}</span>{{/each}}</div>
     <div class="md_subjects"><span class="md_label">Subjects:</span> {{#each sm_subject_label}}<a class="md_subject" href="{{../../app.appRoot}}/search?q={{this}}">{{this}}</a>{{/each}}</div>
  </div>
  </article>
  {{/items}}
  <article class="item"></article>
  <article class="item"></article>
</div>
