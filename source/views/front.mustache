<!doctype html>
<html lang="en">
<head>{{> head }}</head>
<body data-app="{{appUrl}}" data-viewer="{{viewer}}" data-appRoot="{{appRoot}}"  data-discoUrl="{{discoUrl}}"  class="{{bodyClass}}">
  {{> header }}
  <main class="main container-fluid" role="main">
  <header>
    {{#title}}
      <h2  class="page-title" >{{{html}}}</h2>
    {{/title}}
    <div class="resultsnum">Showing items <span class="start"></span> - <span class="docslength"></span> of <span class="numfound"></span></div>
    <div class="filters">
      <select id="browse-select" aria-label="Search Sort Results">
        <option data-sort-dir="asc" value="ss_longlabel" selected>Sort by Title</option>
        <option data-sort-dir="asc" value="ss_sauthor">Sort by Author</option>
        <option data-sort-dir="asc" value="ss_ssubject">Sort by Subject</option>
        <option data-sort-dir="asc" value="ss_publocation">Sort by Place</option>
      </select>
    </div>
    </header>
    {{#content}}
      {{#items}}
        <div 
          class="widget" 
          data-name="items" 
          data-rows="{{ rows }}"
          data-source="{{ discoUrl }}"
          data-fl="{{ fl }}"
          {{#fq}}
          data-fq-{{ filter }}="{{ value }}"
          {{/fq}}
          data-script='{ "js" : [ "browse.min.js" ], "hbs" : [ { "template" : "items.hbs", "id" : "items" } ] }'
        ></div>
        <div class="text-center">
          <div id="paginator" class="pagination"></div>
        </div>        
      {{/items}}
    {{/content}}
  </main>
  {{> footer }}
  {{{ closure }}}
</body>
</html>