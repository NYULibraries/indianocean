---
import NavigationItem from "../Navigation/NavigationItem.astro";
import NavigationMobileMenu from "../Navigation/NavigationMobileMenu.astro";
import SearchForm from '../Search/SearchTools/SearchForm'

const appUrl = import.meta.env.PUBLIC_APPURL
const siteName = import.meta.env.PUBLIC_SITENAME

const HeaderNavigationItems = JSON.parse(import.meta.env.PUBLIC_NAVITEMS)
---
<Fragment>
  <div class="header-wrapper">
    <header class="header-main container-fluid" role="banner">
      <h1 class="sitename"><a href={appUrl}>{siteName}</a></h1>
    </header>
  </div>
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <NavigationMobileMenu/>
      </div>
      <div class="navbar-collapse" >
        <ul class="nav navbar-nav">
          {
            HeaderNavigationItems.map(item => (
              <NavigationItem
                route={item.route}
                className={item.class}
                label={item.label}
              />
            ))
          }
        </ul>
        <div class="search_holder widget navbar-form navbar-right">
          <SearchForm client:only />
        </div>
      </div>
    </div>
  </nav>
</Fragment>
